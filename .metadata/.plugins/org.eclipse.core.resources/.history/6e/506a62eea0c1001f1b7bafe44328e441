package com.kh.baseball.player.model.vo;

import java.util.Date;

import lombok.AllArgsConstructor;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;
import lombok.ToString;

// 에너테이션으로 생성들 필요
@Getter
@Setter
@ToString
@NoArgsConstructor
@AllArgsConstructor
public class Player {
	
	private int userNo;
	private int grade;
	private int playerPosition;
	private Date playerDate;
	private String playerIntro;
	private int playerSalary;
	private int playerNo;
	private String playerStatus;
	private String playerTeam;
	
	
	/* 
	 * 입력받을시
	 * userNo - 시퀀스
	 * grade - (1=프로, 2=아마추어, 3=일반)  <input type="radio" name="menu" value="에그마요" checked>
	 * playerPosition - select(1=코칭스태프, 2=투수, 3=포수, 4=내야수, 5=외야수)
	 * playerDate - <input type="date">
	 * playerIntro - placeholder="1000자 이내로 입력하세요." 
	 * playerSalary - 희망연봉 -> <input type="number">
	 * playerNo - 희망 등번호 -> 아이디중복처럼 겹치면 다른 번호를 입력하라고 표시?
	 * playerStatus - default 'N' (사용자에겐 안보임)
	 * playerTeam - 선수팀 -> 선수등록신청시는 당연히 없으므로 default '없음' (사용자에겐 안보임)
	 */
	
	 
	
	
	
	
	
	
	
	
	
	
	
	
}
